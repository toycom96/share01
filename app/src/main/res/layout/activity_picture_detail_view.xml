<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp"
    tools:context="com.project0603.share01.PictureDetailViewActivity">

    <ImageButton
        android:id="@+id/picture_detail_cancel"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background = "@mipmap/ic_cancel"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/picture_detail_image"
        android:layout_alignEnd="@+id/picture_detail_image"/>
    <ImageView
        android:id="@+id/picture_detail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp"

        android:src="@mipmap/ic_launcher"/>
</RelativeLayout>
